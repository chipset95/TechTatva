<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventCards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eventInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_action_about" />

        <RelativeLayout
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventName"
            android:visibility="gone">

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventLocation"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_time"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventTime"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_date"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/maxSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventDate"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_participants"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_participants"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eventContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maxSize"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_contact"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_contact"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eventContact"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_fav"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_fav"
                android:fontFamily="sans-serif-condensed"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>